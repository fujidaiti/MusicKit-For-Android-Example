<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <com.apple.android.music.sdk.testapp.view.ArtworkImageView
            android:id="@+id/player_artwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"/>

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <SeekBar
        android:id="@+id/player_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/player_time_elapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"/>

        <TextView
            android:id="@+id/player_time_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"/>

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <TextView android:id="@+id/player_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NowPlayingItemTitle"/>

    <TextView android:id="@+id/player_subtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/NowPlayingItemSubtitle"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <ImageView
            android:id="@+id/player_previous_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_previous"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/player_play_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/player_next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_next"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>
